{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "semanticCommits": "enabled",
  "labels": [
    "dependencies",
    "renovate"
  ],
  "prHourlyLimit": 4,
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "rangeStrategy": "replace"
    },
    {
      "matchDepTypes": [
        "devDependencies",
        "peerDependencies"
      ],
      "enabled": false
    }
  ]
}
